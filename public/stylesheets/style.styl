@import url('https://fonts.googleapis.com/css?family=Graduate|Nova+Flat')

@font-face // For Japanese text
  font-family AiharaHudemojiKaisho
  src url("/fonts/AiharaHudemojiKaisho2.01.ttf")


// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                     * // Content Areas //
body
  background black

div.bg
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index -1

  background url('/images/bg.png') repeat
  filter blur(3px)

  animation 180s bg-scroll infinite linear

@keyframes bg-scroll
  100%
    background-position -3000px 0

div.nav
  position absolute
  top 126px
  left 400px

div.nav-right
  position absolute
  top 126px
  right 50px

div.nav p, div.nav-right p
  color grey

div.nav p a, div.nav-right p a
  padding 5px
  color rgb(255,200,100)
  border 1px transparent solid

div.nav p a
  color rgb(100,200,255)

div.nav p a:hover, div.nav-right p a:hover
  text-decoration none

  background rgba(255,200,100,.1)
  border-bottom 1px rgb(255,200,100) solid

div.nav p a:hover
  background rgba(100,200,255,.1)
  border-bottom 1px rgb(100,200,255) solid

div.content
  box-sizing border-box
  padding 5px

  background linear-gradient(90deg, rgba(16,32,64,.8), rgba(16,32,64,.2))
  border 1px rgba(100,200,255,.3) solid

  box-shadow 0 20px 25px 5px rgba(0,0,0,.2)
  box-shadow 0 10px 25px 5px rgba(0,0,0,.4)

div.content-centered
  margin-left 35%
  margin-right 35%

  margin-top 15px
  margin-bottom 15px

div.game-info
  padding 10px
  background rgba(0,0,0,.3)


// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                              * // Text //

// Site logo
h1
  margin 0
  padding-left 30px

  font 60pt Graduate
  color white

span.logo-effect
  transition text-shadow 3s
  text-shadow -2px 2px 0px rgba(0,230,230,.5), // Credit: https://designshack.net/articles/css/12-fun-css-text-shadows-you-can-copy-and-paste/
              -4px 4px 0px rgba(1,204,204,.5),
              -6px 6px 0px rgba(0,189,189,.5)

span.logo-effect:hover
  transition text-shadow .5s
  text-shadow -4px  2px 0px  rgba(0,230,230,.5),
              -8px  4px 0px  rgba(1,204,204,.5),
              -12px 6px 0px  rgba(0,189,189,.5),
              -2px  2px 20px rgb(0,230,230),
              -4px  4px 40px rgb(1,204,204),
              -6px  6px 60px rgb(0,189,189)

h1 a
  border-bottom none !important

  -webkit-text-fill-color rgba(255,255,255,.5)
  -webkit-text-stroke-width 2px
  -webkit-text-stroke-color white

h2
  margin 0

  font 20pt 'Nova Flat', AiharaHudemojiKaisho
  color white

p, pre, label
  margin 3px

  font 8pt Verdana
  color white

p.logo-sub
  position relative
  padding-left 200px
  bottom 25px

  font 9pt Graduate

p.error, p.message
  padding 5px

p.error
  color rgb(255,100,100)
  background linear-gradient(90deg, rgba(255,100,100,.1), transparent)

p.message
  color rgb(100,255,100)
  background linear-gradient(90deg, rgba(100,255,100,.1), transparent)

pre
  white-space pre-wrap
  word-wrap break-all

label
  font-size 7pt

span.highlight
  color white

a
  text-decoration none
  color rgb(100,200,255)

a:hover
  border-bottom 1px rgba(255,255,255,.5) solid

a.special
  color rgb(100,255,200) !important

a.special:hover
  background rgba(100,255,200,.1) !important
  border-bottom 1px rgb(100,255,200) solid !important

.subdued
  color rgba(255,255,255,.5)


// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                            * // Tables //
table
  width 100%

table.list tr:nth-child(even)
  background rgba(0,0,0,.2)

table.list tr td p a
  color white

tr.header td p
  margin-left 10px
  font-weight bold

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                             * // Forms //
input[type='text'], input[type='password'], input[type='submit'], textarea
  padding 3px
  width 100%

  background rgba(0,0,0,.2)
  border 1px rgba(255,255,255,.1) solid

  font 8pt Verdana
  color white

input[type='text']:hover, input[type='password']:hover, input[type='submit']:hover, textarea:hover
  background linear-gradient(rgba(0,0,0,.2), rgba(192,128,255,.1))
  border-bottom 1px rgba(192,128,255,.8) solid

input[type='submit']
  margin-top 5px

  width 100px
  padding 5px

input[type='submit']:hover
  cursor pointer
  border 1px rgba(192,128,255,.8) solid


// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                             * // Other //
hr
  border none
  border-bottom 1px rgba(192,128,255,.5) dashed
