@import url('https://fonts.googleapis.com/css?family=Graduate')

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                     * // Content Areas //
body
  background black

div.bg
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  z-index -1

  background url('/images/bg.png') repeat
  filter blur(3px)


// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// *                                                               * // Text //

// Site logo
h1
  margin 0
  padding-left 30px

  font 80px Graduate
  color white

span.logo-effect
  transition text-shadow 3s
  text-shadow -2px 2px 0px rgba(0,230,230,.5), // Credit: https://designshack.net/articles/css/12-fun-css-text-shadows-you-can-copy-and-paste/
              -4px 4px 0px rgba(1,204,204,.5),
              -6px 6px 0px rgba(0,189,189,.5)

span.logo-effect:hover
  transition text-shadow .5s
  text-shadow -4px  2px 0px  rgba(0,230,230,.5),
              -8px  4px 0px  rgba(1,204,204,.5),
              -12px 6px 0px  rgba(0,189,189,.5),
              -2px  2px 20px rgb(0,230,230),
              -4px  4px 40px rgb(1,204,204),
              -6px  6px 60px rgb(0,189,189)

h1 a
  text-decoration none
  cursor pointer

  -webkit-text-fill-color rgba(255,255,255,.5)
  -webkit-text-stroke-width 2px
  -webkit-text-stroke-color white

p
  margin 0
  color white

p.logo-sub
  position relative
  padding-left 200px
  bottom 25px

  font 12px Graduate
